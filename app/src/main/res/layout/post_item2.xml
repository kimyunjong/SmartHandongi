<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffff6868"
        android:layout_alignParentTop="true"
        android:id="@+id/item_upperline"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="60dp"
        android:id="@+id/left_bar_layout">

    <ImageView
    android:layout_width="15dp"
    android:layout_height="66dp"

    android:id="@+id/left_bar"

    />
    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="7.5dp"
        android:layout_height="7dp"
        android:id="@+id/first_date_img"/>
    </RelativeLayout>
    <TextView
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:id="@+id/first_date"

        />
    <TextView
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:id="@+id/first_weekday"
        android:layout_toRightOf="@id/left_bar_layout"
        android:layout_marginRight="13dp"
        android:layout_below="@+id/first_date"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/group"
        android:layout_toRightOf="@id/left_bar_layout"
        android:layout_marginLeft="14dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/left_bar_layout"
        android:layout_centerVertical="true"
        android:id="@+id/title"
        android:layout_below="@id/group"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="14dp"/>

</RelativeLayout>