<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <TextView
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:id="@+id/first_date"
        android:layout_alignParentLeft="true"
       />
    <TextView
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:id="@+id/first_weekday"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/first_date"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_toRightOf="@id/first_date"
        android:id="@+id/left_bar_layout">

    <ImageView
    android:layout_width="15dp"
    android:layout_height="match_parent"
    android:id="@+id/left_bar"

    />
    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="7.5dp"
        android:layout_height="7dp"
        android:id="@+id/first_date_img"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/group"
        android:layout_toRightOf="@id/left_bar_layout"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/left_bar_layout"
        android:layout_centerVertical="true"
        android:id="@+id/title"
        android:layout_below="@id/group"
        android:singleLine="true"
        android:ellipsize="end"/>

</RelativeLayout>