<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_menu">
    <LinearLayout
        android:id="@+id/push_top_bar_scrap"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="#32000000">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/push_back_btn"
                android:layout_width="50.5dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"/>
            <ImageView
                android:layout_width="50.5dp"
                android:layout_height="52.5dp"
                android:layout_centerVertical="true"
                android:background="@drawable/backarrow"/>

            <ImageView
                android:layout_width="125.5dp"
                android:layout_height="50.5dp"
                android:layout_centerInParent="true"
                android:background="@drawable/scrap_title"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:id="@+id/scrap_num_layout_outmost"
        android:layout_below="@+id/push_top_bar_scrap">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15.922dp"
            android:layout_marginBottom="3dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/scrap_num_layout">
        <ImageView
            android:layout_width="41.5dp"
            android:layout_height="15dp"
            android:src="@drawable/scrap_num_img"
            android:id="@+id/scrap_num1"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="임시입니다."
            android:layout_height="wrap_content"
            android:id="@+id/scrap_num"
            android:textSize="15dp"
            android:textColor="#ff6868"
            android:layout_marginLeft="7.126dp"
            android:layout_marginRight="1.367dp"

            />
            <ImageView
                android:layout_width="13dp"
                android:layout_height="15dp"
                android:id="@+id/scrap_num2"
                android:src="@drawable/scrap_num_img2"
                android:layout_toRightOf="@+id/scrap_num"/>

        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.5"
        android:layout_below="@id/scrap_num_layout_outmost"
        android:background="#ffffff">

    </RelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/scrap_num_layout_outmost"
        android:dividerHeight="0dp"
        android:divider="#ffffff"
        android:scrollbars="none"
        android:id="@+id/scrap_list">

        </ListView>
    
    
    
    
</RelativeLayout>