<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="76.5dp"
            android:layout_height="30.5dp"
            android:layout_marginLeft="12.5dp"
            android:background="@drawable/dialog_category_img"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="#ffd3d4d4"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="33dp">
        <Button
            android:id="@+id/choice_btn_three_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>
        <TextView
            android:id="@+id/choice_tv_three_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textSize="16.5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="33dp">
        <Button
            android:id="@+id/choice_btn_three_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>
        <TextView
            android:id="@+id/choice_tv_three_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textSize="16.5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="33dp">
        <Button
            android:id="@+id/choice_btn_three_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>
        <TextView
            android:id="@+id/choice_tv_three_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textSize="16.5dp"/>
    </RelativeLayout>

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffd3d4d4"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="33dp">
        <Button
            android:id="@+id/choice_cancel_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>
        <TextView
            android:id="@+id/choice_tv_three_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerInParent="true"
            android:textSize="16.5dp"
            android:text="취소"/>
    </RelativeLayout>

</LinearLayout>