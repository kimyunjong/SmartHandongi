                android:layout_height="match_parent">
                <Button
                    android:id="@+id/writing_back_btn"
                    android:layout_width="50.5dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"/>
                <ImageView
                    android:layout_width="50.5dp"
                    android:layout_height="52.5dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/backarrow"/>
                <ImageView
                    android:id="@+id/writing_title_message"
                    android:layout_width="76.5dp"
                    android:layout_height="38dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/writing_writing"/>
                <ImageView
                    android:id="@+id/writing_title_edit"
                    android:layout_width="126dp"
                    android:layout_height="51dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:background="@drawable/writing_edit"/>
                <ImageView
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.5"
                    android:layout_alignParentBottom="true"
                    android:background="#f1f2f2"/>
            </RelativeLayout>


        </LinearLayout>

