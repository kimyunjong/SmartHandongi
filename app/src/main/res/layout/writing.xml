<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:id="@+id/entire_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000">
        <LinearLayout
            android:id="@+id/writing_top_bar"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/writing_back_btn"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"/>
                <ImageView
                    android:layout_width="28.5dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/backarrow"/>
                <ImageView
                    android:layout_width="76.5dp"
                    android:layout_height="38dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/writing_writing"/>
                <ImageView
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.5"
                    android:layout_alignParentBottom="true"
                    android:background="#ffffff"/>
            </RelativeLayout>


        </LinearLayout>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="59.5dp"
        android:scrollbars="none"

        >
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:layout_marginBottom="67dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="64.5dp"
                android:layout_height="match_parent"
                android:background="@drawable/writing_bubble_4"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="@drawable/writing_downarrow_extend"/>
            <ImageView
                android:layout_width="131.5dp"
                android:layout_height="match_parent"
                android:background="@drawable/writing_downarrow_extend"/>
            <ImageView
                android:layout_width="27.5dp"
                android:layout_height="match_parent"
                android:background="@drawable/writing_downarrow"/>
            <ImageView
                android:layout_width="131.5dp"
                android:layout_height="match_parent"
                android:background="@drawable/writing_downarrow_extend"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="@drawable/writing_downarrow_extend"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
     
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"/>
            <RelativeLayout
                android:layout_width="131.5dp"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/big_category_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#ffffff"
                    android:background="@android:color/transparent"/>
                <ImageView
                    android:id="@+id/big_category_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/writing_big_category"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="22dp"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:layout_width="131.5dp"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/small_category_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#ffffff"
                    android:background="@android:color/transparent"/>
                <ImageView
                    android:id="@+id/small_category_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/writing_small_category"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>

        <ImageView
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.5"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/writing_title_img"
                android:layout_width="35.5dp"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"/>
                <!--android:background="@drawable/writing_title"-->
            <EditText
                android:id="@+id/writing_title"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:gravity="left"
                android:layout_marginRight="15dp"
                android:hint="제목"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:background="#00000000"/>

        </RelativeLayout>

        <ImageView
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.5"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"/>

        <RelativeLayout
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <ImageView
                android:id="@+id/writing_body_img"
                android:layout_width="37dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"/>
            <!--android:background="@drawable/writing_body"-->
            <EditText
                android:id="@+id/writing_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:hint="내용"
                android:textColorHint="#ffffff"
                android:gravity="top|left"/>
        </RelativeLayout>

        <ImageView
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.5"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"/>
        <RelativeLayout
            android:layout_width="83.5dp"
            android:layout_height="22.5dp"
            android:layout_marginLeft="15dp">
            <ImageButton
                android:id="@+id/writing_additional_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/writing_additional"/>
            <ImageButton
                android:id="@+id/writing_additional_hide_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/writing_additional_hide"
                android:visibility="gone"/>
        </RelativeLayout>

    <LinearLayout
        android:id="@+id/writing_additional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.5"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="23.5dp"
            android:layout_marginLeft="15dp">
            <ImageView
                android:layout_width="48.5dp"
                android:layout_height="wrap_content"
                android:background="@drawable/writing_startdate"/>
            <Button
                android:id="@+id/startdate_choose"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"/>
            <ImageView
                android:id="@+id/writing_startdate_img"
                android:layout_width="97dp"
                android:layout_height="25.5dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/writing_dates"/>
            <TextView
                android:id="@+id/start_date_label"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textSize="14.5dp"
                android:textColor="#ffffff"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:background="#00000000"/>
        </RelativeLayout>
        <ImageView
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.5"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="23.5dp"
            android:layout_marginLeft="15dp">
            <ImageView
                android:layout_width="48.5dp"
                android:layout_height="wrap_content"
                android:background="@drawable/writing_enddate"/>
            <ImageView
                android:id="@+id/writing_enddate_img"
                android:layout_width="97dp"
                android:layout_height="25.5dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/writing_dates"/>
            <Button
                android:id="@+id/enddate_choose"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"/>
            <TextView
                android:id="@+id/end_date_label"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textSize="14.5dp"
                android:textColor="#ffffff"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:background="#00000000"/>
        </RelativeLayout>
        <ImageView
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.5"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp">
            <ImageView
                android:id="@+id/writing_link_pic"
                android:layout_width="48.5dp"
                android:layout_height="24dp"
                android:background="@drawable/writing_link"/>
            <EditText
                android:id="@+id/writing_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/writing_link_pic"
                android:textSize="18dp"
                android:layout_marginLeft="17dp"
                android:textColor="#ffffff"
                android:layout_marginRight="15dp"
                android:background="#00000000"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            >
            <ImageView
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:layout_alignParentTop="true"
                android:background="#ffffff"/>
            <ImageView
                android:id="@+id/writing_addpic"
                android:layout_width="66.5dp"
                android:layout_height="23.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/writing_picture_message"
                android:layout_alignParentTop="true"/>
            <ImageButton
                android:id="@+id/writing_remove_pic_btn"
                android:layout_toRightOf="@id/writing_addpic"
                android:layout_marginTop="10dp"
                android:layout_width="41dp"
                android:layout_height="26dp"
                android:visibility="gone"
                android:background="@drawable/writing_remove_pic"/>
            <ImageView
                android:id="@+id/writing_preview_img"
                android:layout_width="81dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/writing_picture"
                android:layout_alignParentTop="true"/>
            <Button
                android:id="@+id/writing_image_btn"
                android:layout_width="81dp"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"/>
            <ImageView
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:layout_alignParentBottom="true"
                android:background="#ffffff"/>

        </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
    </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59.5dp"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/writing_cancel_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"/>
            <ImageView
                android:layout_width="52.5dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/cancel"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/writing_confirm_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"/>
            <ImageView
                android:layout_width="52.5dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/confirm"/>
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>