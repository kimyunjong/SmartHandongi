                            android:layout_marginRight="10dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/writing_dates"/>
                        <Button
                            android:id="@+id/enddate_choose"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"/>
                        <TextView
                            android:id="@+id/end_date_label"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:textSize="14.5dp"
                            android:textColor="#f1f2f2"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="5dp"
                            android:visibility="gone"
                            android:background="#00000000"/>
                    </RelativeLayout>
                    <ImageView
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="0.5"
                        android:layout_alignParentBottom="true"
                        android:background="#f1f2f2"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp">
                        <ImageView
                            android:id="@+id/writing_link_pic"
                            android:layout_width="48.5dp"
                            android:layout_height="24dp"
                            android:background="@drawable/writing_link"/>
                        <EditText
                            android:id="@+id/writing_link"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/writing_link_pic"
                            android:textSize="14.5dp"
                            android:layout_marginLeft="17dp"
                            android:textColor="#f1f2f2"
                            android:layout_marginRight="15dp"
                            android:background="#00000000"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        >
                        <ImageView
                            android:layout_marginTop="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:alpha="0.5"
                            android:layout_alignParentTop="true"
                            android:background="#f1f2f2"/>
                        <ImageView
                            android:id="@+id/writing_addpic"
                            android:layout_width="66.5dp"
                            android:layout_height="23.5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/writing_picture_message"
                            android:layout_alignParentTop="true"/>
                        <ImageButton
                            android:id="@+id/writing_remove_pic_btn"
                            android:layout_toRightOf="@id/writing_addpic"
                            android:layout_marginTop="10dp"
                            android:layout_width="41dp"
                            android:layout_height="26dp"
                            android:visibility="gone"
                            android:background="@drawable/writing_remove_pic"/>
                        <ImageView
                            android:id="@+id/writing_preview_img"
                            android:layout_width="81dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="15dp"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/writing_picture1"
                            android:layout_alignParentTop="true"/>
                        <Button
                            android:id="@+id/writing_image_btn"
                            android:layout_width="81dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:layout_alignParentEnd="true"
                            android:background="@android:color/transparent"/>
                        <ImageView
                            android:layout_marginTop="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:alpha="0.5"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="1dp"
                            android:background="#f1f2f2"/>

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59.5dp"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/writing_cancel_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"/>
            <ImageView
                android:layout_width="58dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/cancel"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/writing_confirm_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"/>
            <ImageView
                android:id="@+id/writing_confirm_img"
                android:layout_width="58dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/confirm"/>
            <ImageView
                android:id="@+id/writing_edit_confirm"
                android:layout_width="68.5dp"
                android:layout_height="38.5dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:background="@drawable/writing_edit_confirm"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/popup_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#000000"
        android:alpha="0.6">
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/popup_2"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:visibility="gone"
        android:background="#ff000000"
        android:layout_centerVertical="true"
        android:alpha="0.3">
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/popup_3"
        android:layout_width="242dp"
        android:layout_height="48dp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_writing_confirm">
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/popup_4"
        android:layout_width="242dp"
        android:layout_height="48dp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_push_confirm">
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/popup_5"
        android:layout_width="242dp"
        android:layout_height="48dp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_cancel">
    </RelativeLayout>


</RelativeLayout>