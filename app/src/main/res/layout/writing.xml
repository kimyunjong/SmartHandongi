                    </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/writing_additional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="0.5"
                        android:layout_alignParentBottom="true"
                        android:background="#f1f2f2"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="23.5dp"
                        android:layout_marginLeft="15dp">
                        <ImageView
                            android:layout_width="48.5dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/writing_startdate"/>
                        <Button
                            android:id="@+id/startdate_choose"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"/>
                        <ImageButton
                            android:visibility="gone"
                            android:id="@+id/writing_reset_dates"
                            android:layout_width="51dp"
                            android:layout_height="25.5dp"
                            android:layout_marginLeft="54dp"
                            android:background="@drawable/writing_reset_dates"/>
                        <ImageView
                            android:id="@+id/writing_startdate_img"
                            android:layout_width="97dp"
                            android:layout_height="25.5dp"
                            android:layout_marginRight="10dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/writing_dates"/>
                        <TextView
                            android:id="@+id/start_date_label"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:textSize="14.5dp"
                            android:textColor="#f1f2f2"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="5dp"
                            android:visibility="gone"
                            android:background="#00000000"/>
                    </RelativeLayout>
                    <ImageView
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
