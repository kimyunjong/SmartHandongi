<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_marginTop="14.5dp"
        android:layout_marginBottom="14.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="2.5dp"
        android:layout_marginRight="2.5dp"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/kakao_nick"
            android:layout_width="wrap_content"
            android:layout_height="22.5dp"
            android:textSize="14.5dp"
            android:text="아이디들어갈곳"
            android:paddingRight="8dp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14.5dp"
            android:text="2015-02-16"
            android:layout_toRightOf="@+id/kakao_nick"
            />
        <ImageView
            android:id="@+id/new_img"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/comment_new"
            android:layout_toRightOf="@+id/date"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/new_img"
            >
        <Button
            android:id = "@+id/notify_btn"
            android:layout_width="40dp"
            android:layout_height="14.5dp"
            android:onClick="onClick"
            android:text="신고"
            android:textColor="#ff6868"
            android:textSize="14.5dp"
            android:background="#00000000"
            />

        <Button
            android:id="@+id/del_btn"
            android:layout_width="40dp"
            android:layout_height="14.5dp"
            android:onClick="onClick"
            android:textColor="#ff6868"
            android:text="삭제"
            android:background="#00000000"
            android:textSize="14.5dp"
            android:layout_toRightOf="@+id/notify_btn"/>
        </RelativeLayout>

    </RelativeLayout>
    <TextView
        android:id="@+id/content"
        android:text="djjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14.5dp"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:alpha="0.5"
        >
        </LinearLayout>
</LinearLayout>