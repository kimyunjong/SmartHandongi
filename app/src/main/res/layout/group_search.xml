<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/writing_background"
    android:id="@+id/screen">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4d111111">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56.5dp">
            <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="48.5dp"
            android:layout_height="match_parent">

                <Button
                    android:id="@+id/group_backward_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/writing_backarrow"
                    />

            </RelativeLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/writing_topbar_margin"/>
            <ImageView
                android:layout_width="133.5dp"
                android:layout_height="match_parent"
                android:background="@drawable/group_search"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/writing_topbar_margin"/>
            <ImageView
                android:layout_width="48.5dp"
                android:layout_height="match_parent"
                android:background="@drawable/writing_top_right"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="64.5dp"
                android:layout_height="match_parent"
                android:background="@drawable/writing_bubble_2"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
            />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="17dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:background="@drawable/writing_downarrow_extend"/>
                    <ImageView
                        android:layout_width="131.5dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/writing_downarrow_extend"/>
                    <ImageView
                        android:layout_width="27.5dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/writing_downarrow"/>
                    <ImageView
                        android:layout_width="131.5dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/writing_downarrow_extend"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:background="@drawable/writing_downarrow_extend"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16dp">
                 <ImageView
                    android:layout_width="196.5dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/group_name_enter_please"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="32dp">

                <ImageView
                    android:layout_width="19.5dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/search_left"
                    />
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/search_middle"
                        />
                    <EditText
                        android:id="@+id/groupsearch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:singleLine="true"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="47.5dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/search_right_x"
                        android:layout_width="47.5dp"
                        android:layout_height="match_parent"
                        android:visibility="invisible"
                        android:background="@drawable/search_right_x"
                        />
                    <ImageView
                        android:id="@+id/search_right_glass"
                        android:layout_width="47.5dp"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        android:background="@drawable/search_right_glass"
                        />
                </RelativeLayout>
            </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="25.5dp"
                    android:background="#F7F6F5"
                    android:alpha="0.7"
                    >
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="37.5dp"
                    android:layout_height="15.5dp"
                    android:background="@drawable/group_name"
                    />

                    </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10"
                    android:background="#F7F6F5"
                    android:alpha="0.3"
                    >
                <ListView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:listSelector="@android:color/darker_gray"
                    android:visibility="visible"
                    > </ListView>


                </RelativeLayout>


            </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />


            </LinearLayout>

    </LinearLayout>

</RelativeLayout>