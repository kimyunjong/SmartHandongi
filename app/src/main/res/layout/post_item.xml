<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
   >

<RelativeLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="60dp"

    android:id="@+id/post_item"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="#414042"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/line_item">

    </LinearLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tj="http://schemas.android.com/apk/res/com.smarthandongi"
    android:layout_toRightOf="@+id/post_category_layout"
    android:layout_toLeftOf="@+id/like_button"
    android:layout_centerHorizontal="true"
    android:id="@+id/standard"
    android:layout_marginTop="15.5dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="6dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/post_group"
        android:textColor="#4d4d4d"
        android:textSize="13.5dp"
        android:text="산업정보디자인"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/post_dday"
        android:layout_toRightOf="@+id/post_group"
        android:layout_marginLeft="2dp"
        android:textSize="12.5dp"
        android:textColor="#ccff6868"
        android:text="2222"
        android:layout_marginBottom="4.5dp"
        />
    <com.smarthandongi.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="22.2dp"
        android:id="@+id/post_title"
        android:layout_below="@+id/post_group"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="2dp"
        android:textColor="#5a5a5a"
        android:text="title"
        android:textSize="15dp"
        tj:textStroke="true"
        tj:textStrokeWidth="0.5"
        tj:textStrokeColor="#5a5a5a"
        />

</RelativeLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/post_category_layout"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="12.5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="23.5dp"
            android:layout_height="23.5dp"
            android:id="@+id/post_category"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_id"
            android:text="111"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:textSize="12dp"/>

    </LinearLayout>

</RelativeLayout>
    <ImageButton
        android:layout_width="34dp"
        android:layout_height="45dp"
        android:id="@+id/like_button"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="11dp"
        android:layout_alignTop="@+id/dday"/>

